{
  "name": "context-delta",
  "version": "0.0.6",
  "description": "Context Delta CLI for managing context-delta/ workflows (Node.js port)",
  "license": "MIT",
  "type": "module",
  "main": "./dist/delta.js",
  "bin": {
    "delta": "./bin/cli.cjs",
    "context-delta": "./bin/cli.cjs"
  },
  "files": [
    "dist",
    "templates",
    "bin/cli.cjs",
    "README.md",
    "docs/npm-architecture.md"
  ],
  "scripts": {
    "build": "rimraf lib dist && tsc --project tsconfig.build.json && tsup --config tsup.config.ts",
    "dev": "tsx bin/delta.ts",
    "lint": "eslint .",
    "test": "vitest run tests/node-cli",
    "test:watch": "vitest watch tests/node-cli",
    "prepare": "npm run build"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "prompts": "^2.4.2",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "tsx": "^4.7.0",
    "typescript": "^5.4.2",
    "vitest": "^1.3.1"
  },
  "keywords": [
    "context-delta",
    "cli",
    "prompts",
    "openspec"
  ],
  "author": "Team PAL",
  "packageManager": "npm@10.5.0"
}
